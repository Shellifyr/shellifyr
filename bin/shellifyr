#!/bin/sh

# Help command
function show_help {
  echo ""
  echo "use: shellifyr <command>"
  echo ""
  echo "here is a list of all the commands available:"
  echo ""
  echo "  update - updates shellifyr's repository"
  echo ""
}

function main {
  if [ $# -eq 0 ]; then
    echo "Error: No command was given."
    show_help
    exit 1
  fi 

  case $1 in 
    update)
      sh "$SHELLIFYR_HOME/tools/upgrade.sh"
      ;;
    help)
      show_help
      ;;
    *)
      echo "Unknown command: $1"
      show_help
      exit 1
      ;;
  esac
}

main "$@"
